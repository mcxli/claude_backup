{
  "permissions": {
    "allow": [
      "Bash(curl:https://api.anthropic.com/*)",
      "Bash(curl:https://docs.anthropic.com/*)",
      "Bash(curl:https://api.github.com/*)",
      "Bash(curl:https://docs.github.com/*)",
      "Bash(curl:https://registry.npmjs.org/*)",
      "Bash(curl:https://docs.npmjs.com/*)",
      "Bash(curl:https://developer.mozilla.org/*)",
      "Bash(curl:https://stackoverflow.com/*)",
      "Bash(wget:https://github.com/*/releases/download/*)",
      "Bash(wget:https://releases.hashicorp.com/*)",
      "Bash(gh pr:*)",
      "Bash(gh repo:*)",
      "Bash(gh issue:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(yarn install:*)",
      "Bash(bundle exec rspec:*)",
      "Bash(pnpm install:*)",
      "Read(**/package.json)",
      "Read(**/package-lock.json)",
      "Read(**/yarn.lock)",
      "Read(**/tsconfig.json)",
      "Read(**/.gitignore)",
      "Read(**/README.md)",
      "Write(**/package.json)",
      "Write(**/.gitignore)",
      "Write(**/README.md)",
      "Write(**/docs/**)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:--force*)",
      "Bash(git push:*--force*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git force:*)",
      "Bash(chmod 777:*)",
      "Bash(chown:*)",
      "Read(.env*)",
      "Read(**/.env*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(**/*secret*)",
      "Read(**/*password*)",
      "Read(**/node_modules/**)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Write(**/node_modules/**)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/var/**)",
      "Bash(nc:*)",
      "Bash(netcat:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)",
      "Bash(yarn remove:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongod:*)",
      "Bash(docker run:*)",
      "Bash(docker exec:*)",
      "mcp__supabase__execute_sql"
    ]
  },
  "model": "sonnet",
  "timeout": 300000,
  "logLevel": "info",
  "maxFileSize": "10MB",
  "allowedFileExtensions": [
    ".js",
    ".ts",
    ".jsx",
    ".tsx",
    ".py",
    ".java",
    ".cpp",
    ".c",
    ".go",
    ".rs",
    ".php",
    ".rb",
    ".cs",
    ".swift",
    ".kt",
    ".scala",
    ".sh",
    ".md",
    ".txt",
    ".json",
    ".yaml",
    ".yml",
    ".toml",
    ".xml",
    ".html",
    ".css",
    ".scss",
    ".less",
    ".sql",
    ".dockerfile",
    ".gitignore"
  ],
  "backupBeforeWrite": true,
  "confirmBeforeDestruction": true,
  "rateLimits": {
    "commandsPerMinute": 30,
    "apiCallsPerMinute": 60
  },
  "notifications": {
    "onError": true,
    "onCompletion": false,
    "onWarning": true
  },
  "security": {
    "requireConfirmationFor": [
      "Write(**/package.json)",
      "Bash(git commit:*)",
      "Bash(npm publish:*)"
    ],
    "sandboxMode": true,
    "auditLog": true
  },
  "hooks": {
    "user-prompt-submit-hook": "~/.claude/security-validator.py"
  }
}