{
  "permissions": {
    "allow": [
      "Bash(curl:https://api.anthropic.com/*)",
      "Bash(curl:https://docs.anthropic.com/*)",
      "Bash(curl:https://api.github.com/*)",
      "Bash(curl:https://docs.github.com/*)",
      "Bash(curl:https://registry.npmjs.org/*)",
      "Bash(curl:https://docs.npmjs.com/*)",
      "Bash(curl:https://developer.mozilla.org/*)",
      "Bash(curl:https://stackoverflow.com/*)",
      "Bash(wget:https://github.com/*/releases/download/*)",
      "Bash(wget:https://releases.hashicorp.com/*)",
      "Bash(gh pr:*)",
      "Bash(gh repo:*)",
      "Bash(gh issue:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git clone:*)",
      "Bash(git checkout:-b :*)",
      "Bash(git switch:*)",
      "Bash(git branch:)",
      "Bash(git branch:-a)",
      "Bash(git branch:-r)",
      "Bash(git branch:-v)",
      "Bash(git stash:*)",
      "Bash(git tag:*)",
      "Bash(git merge:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(bundle exec rspec:*)",
      "Read(**/*)",
      "Write(**/*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git branch:-d :*)",
      "Bash(git branch:-D :*)",
      "Bash(git branch:-f :*)",
      "Bash(git branch:-M :*)",
      "Bash(git force:*)",
      "Bash(git clean:*)",
      "Bash(chmod 777:*)",
      "Bash(chown:*)",
      "Read(.env*)",
      "Read(**/.env*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(**/*secret*)",
      "Read(**/*password*)",
      "Read(**/node_modules/**)",
      "Write(.env*)",
      "Write(**/.env*)",
      "Write(**/secrets/**)",
      "Write(**/*password*)",
      "Write(**/*token*)",
      "Write(**/*key*)",
      "Write(**/*credential*)",
      "Write(.ssh/**)",
      "Write(~/.ssh/**)",
      "Write(id_rsa*)",
      "Write(id_ed25519*)",
      "Write(*.pem)",
      "Write(*.p12)",
      "Write(*.pfx)",
      "Write(**/node_modules/**)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/var/**)",
      "Bash(nc:*)",
      "Bash(netcat:*)",
      "Bash(npm install:--global :*)",
      "Bash(npm install:-g :*)",
      "Bash(yarn global:*)",
      "Bash(pnpm add:--global :*)",
      "Bash(pnpm add:-g :*)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)",
      "Bash(yarn remove:*)",
      "Bash(pnpm remove:*)",
      "Bash(pnpm uninstall:*)",
      "Bash(gh repo:delete :*)",
      "Bash(gh repo:archive :*)",
      "Bash(gh pr:close:--delete-branch :*)",
      "Bash(gh release:delete :*)",
      "Bash(git add:*.env:*)",
      "Bash(git add:.env:*)",
      "Bash(git add:*secret:*)",
      "Bash(git add:*password:*)",
      "Bash(git add:*token:*)",
      "Bash(git add:*key:*)",
      "Bash(git add:*credential:*)",
      "Bash(git add:.ssh/*)",
      "Bash(git add:id_rsa:*)",
      "Bash(git add:id_ed25519:*)",
      "Bash(git add:*.pem:*)",
      "Bash(git add:*.p12:*)",
      "Bash(git add:*.pfx:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongod:*)",
      "Bash(docker run:*)",
      "Bash(docker exec:*)",
      "mcp__supabase__execute_sql"
    ]
  },
  "model": "sonnet",
  "timeout": 300000,
  "logLevel": "info",
  "maxFileSize": "10MB",
  "allowedFileExtensions": [
    ".js",
    ".ts",
    ".jsx",
    ".tsx",
    ".py",
    ".java",
    ".cpp",
    ".c",
    ".go",
    ".rs",
    ".php",
    ".rb",
    ".cs",
    ".swift",
    ".kt",
    ".scala",
    ".sh",
    ".md",
    ".txt",
    ".json",
    ".yaml",
    ".yml",
    ".toml",
    ".xml",
    ".html",
    ".css",
    ".scss",
    ".less",
    ".sql",
    ".dockerfile",
    ".gitignore"
  ],
  "backupBeforeWrite": true,
  "confirmBeforeDestruction": true,
  "rateLimits": {
    "commandsPerMinute": 30,
    "apiCallsPerMinute": 60
  },
  "notifications": {
    "onError": true,
    "onCompletion": false,
    "onWarning": true
  },
  "security": {
    "requireConfirmationFor": [
      "Bash(npm publish:*)",
      "Bash(yarn publish:*)",
      "Bash(pnpm publish:*)",
      "Write(**/package.json)",
      "Bash(npm audit:fix)",
      "Bash(yarn audit:fix)",
      "Bash(pnpm audit:fix)"
    ],
    "sandboxMode": true,
    "auditLog": true
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/security-validator.py"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": false,
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": true,
    "DISABLE_ERROR_REPORTING": true,
    "DISABLE_TELEMETRY": true,
    "MAX_THINKING_TOKENS": 100000
  }
}